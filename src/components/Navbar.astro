---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

import Container from "@components/Container.astro";
import Logo from "@components/Logo.astro";

const menuitems = [
  {
    title: "react",
    path: "/react",
  },
  {
    title: "svelte",
    path: "/svelte",
  },
  {
    title: "htmx",
    path: "/htmx",
  },
];
---

<Container class="w-full max-w-4xl">
  <header
    class="flex flex-col lg:flex-row justify-between items-center pb-1 border-b border-black"
  >
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <div>
          <a href="/" class="text-lg"><Logo /></a>
        </div>
        <div class="block lg:hidden hamburger">
          <MenuIcon class="w-8 h-8" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto lg:flex">
        <ul class="flex flex-col lg:flex-row gap-4 lg:gap-5">
          {
            menuitems.map((item) => (
              <li>
                <a href={item.path} class="flex items-center">
                  <span> {item.title}</span>
                </a>
              </li>
            ))
          }
        </ul>
      </MenuItems>
    </Astronav>
  </header>
</Container>

<style>
  .hamburger :global(button, button:hover) {
    background-color: white;
    border: none;
    color: black;
  }
</style>
